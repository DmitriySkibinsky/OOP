<Window x:Class="IntegerOverflow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Integer Overflow Check" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Число 1:" Grid.Row="0" Grid.Column="0" Margin="10"/>
        <TextBox x:Name="Number1TextBox" Grid.Row="0" Grid.Column="1" Margin="10"/>

        <Label Content="Число 2:" Grid.Row="1" Grid.Column="0" Margin="10"/>
        <TextBox x:Name="Number2TextBox" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <Button x:Name="MultiplyButton" Content="Умножить" Grid.Row="2" Grid.ColumnSpan="2" Margin="10" Click="MultiplyButton_Click"/>

        <Label Content="Результат:" Grid.Row="3" Grid.Column="0" Margin="10"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="3" Grid.Column="1" Margin="10" Foreground="Green"/>
    </Grid>
</Window>